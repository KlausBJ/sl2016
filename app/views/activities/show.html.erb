<p id="notice"><%= notice %></p>

<p>
  <strong>Navn:</strong>
  <%= @activity.navn %>
</p>

<p>
  <strong>Sted:</strong>
  <%= @activity.sted %>
</p>

<p>
  <strong>Tid:</strong>
  <%= @activity.tid %>
</p>

<p>
  <strong>Tovholder:</strong>
  <%= @activity.registration.name if @activity.registration %>
</p>

<p>
  <strong>Deltagerliste </strong>(<%= @activity.tickets.count %> deltagere)
</p>

<p>
	<table>
		<tr bgcolor="#<%= cycle('AFFFFF','FFFFFF') %>">
			<th align="left">Navn&nbsp;&nbsp;</th>
			<th align="right">Medlemsnr</th>
		</tr>
		<% @activity.tickets.each do |ticket| %>
			<tr bgcolor="#<%= cycle('AFFFFF','FFFFFF') %>">
					<td><%= ticket.name %>&nbsp;&nbsp;</td>
					<td align="right"><%= ticket.registration.member.number %></td>
			</tr>
		<% end %>
	</table>
</p>


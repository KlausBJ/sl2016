<p id="notice"><%= notice %></p>

<p>
  <strong>Medlemsnr:</strong>
  <%= @member.number %>
</p>

<p>
  <strong>Navn:</strong>
  <%= @member.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @member.email %>
</p>

<p>
	<table>
		<tr>
			<th align="left" width="200">Navn</th>
			<th align="left">Billettype</th>
		</tr>
		<% @member.registrations.each do |registration| %>
			<tr>
					<td><%= registration.name %></td>
					<td><%= registration.ticket_type.name %></td>
			</tr>
		<% end %>
	</table>
</p>

<p>
	<table>
		<tr>
			<th align="left" width="200">Aktivitet</th>
			<th align="left">Opgave</th>
		</tr>
		<% @member.registrations.each do |registration| %>
			<% registration.tickets.each do |ticket| %>
				<tr>
					<td><%= registration.name %> - <%= ticket.activity.navn rescue "" %></td>
					<td>
						<% lineend = '' %>
						<% ticket.activity.tasks.each do |task| %>
							<%= lineend %><%= task.name %>
							<% lineend = '<br/>' %>
						<% end %>
					</td>
				</tr>
			<% end %>
		<% end %>
	</table>
</p>

